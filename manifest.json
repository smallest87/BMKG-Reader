{
  "manifest_version": 3,
  "name": "BMKG Weather Reader",
  "version": "1.0",
  "description": "Alat bantu untuk mengambil dan menganalisis data cuaca dari website BMKG (Sederhana & Detail).",
  "permissions": [
    "sidePanel",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.bmkg.go.id/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Buka BMKG Reader"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.bmkg.go.id/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}